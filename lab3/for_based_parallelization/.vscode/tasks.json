{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "make",
    "showOutput": "silent",
    "tasks": [
        {
            "taskName": "build",
            // Show the output window only if unrecognized errors occur.
            "showOutput": "silent",
            "problemMatcher": "$msCompile",
            "suppressTaskName": true
        },
        {
            "taskName": "clean",
            "showOutput": "silent"
        }
    ]
}